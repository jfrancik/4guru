<h1>Listing shows</h1>

<table>
  <tr>
    <th>Screening</th>
    <th>Hour</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%= link_to "#{show.screening.film.title} in #{show.screening.cinema.name}", show.screening %></td>
    <td><%= show.hour %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

